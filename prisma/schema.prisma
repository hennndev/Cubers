generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              Int           @id @default(autoincrement())
  name            String
  email           String        @unique
  password        String
  roleId          Int           @unique
  role            Role       @relation(fields: [roleId], references: [id])
  userDetailId    Int           @unique
  detail          UserDetail    @relation(fields: [userDetailId], references: [id])
  createdAt       DateTime      @default(now())

  @@index([roleId])
  @@index([userDetailId])
}

model UserDetail {
  id          Int @id @default(autoincrement())
  prodi       String
  university  String
  semester    Int
  birthdayDate  DateTime
  country     String
  city        String
  fullAddress String
  postalCode  Int
  user        User?
  createdAt   DateTime @default(now())
}

model Role {
  id      Int   @id @default(autoincrement())
  role    String
  user    User[]
}
